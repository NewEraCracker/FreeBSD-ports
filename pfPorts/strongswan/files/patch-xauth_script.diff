+METHOD(xauth_method_t, process, status_t,
+	private_xauth_script_t *this, cp_payload_t *in, cp_payload_t **out)
+{
+	char *service, user[128] = "", pass[128] = "", *pos, *authcfg;
+	configuration_attribute_t *attr;
+	enumerator_t *enumerator;
+	chunk_t chunk;
+
+	enumerator = in->create_attribute_enumerator(in);
+	while (enumerator->enumerate(enumerator, &attr))
+	{
+		switch (attr->get_type(attr))
+		{
+			case XAUTH_USER_NAME:
+				chunk = attr->get_chunk(attr);
+				attr2string(user, sizeof(user), chunk);
+				break;
+			case XAUTH_USER_PASSWORD:
+				attr2string(pass, sizeof(pass), attr->get_chunk(attr));
+				break;
+			default:
+				break;
+		}
+	}
+	enumerator->destroy(enumerator);
+
+	if (!user[0] || !pass[0])
+	{
+		DBG1(DBG_IKE, "peer did not respond to our XAuth request");
+		return FAILED;
+	}
+
+	this->peer->destroy(this->peer);
+	this->peer = identification_create_from_string(user);
+
+	service = lib->settings->get_str(lib->settings,
+				"%s.plugins.xauth-script.script",
+				charon->name);
+	authcfg = lib->settings->get_str(lib->settings,
+				"%s.plugins.xauth-script.authcfg",
+				charon->name);
+
+	if (!authenticate(service, user, pass, authcfg))
+	{
+		return SUCCESS;
+	}
+	return FAILED;
+}
+
+METHOD(xauth_method_t, get_identity, identification_t*,
+	private_xauth_script_t *this)
+{
+	return this->peer;
+}
+
+METHOD(xauth_method_t, destroy, void,
+	private_xauth_script_t *this)
+{
+	this->peer->destroy(this->peer);
+	free(this);
+}
